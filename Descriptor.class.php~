class Descriptor
{
  static $type = array('integer', 'bool', 'float', 'string');
  private $name;
  private $id;
  private $fieldslist;

  function __construct()
  {}
  function setName($name){
    $this->name = $name;
  }

  function setPrimaryKey($name, $type){
    $this->id = array($val, $type);
  }

  function addField($val, $tpe, isNull = TRUE){
    $fieldList[] = array($val, $tupe, isNULL);
  }

  function getFieldList(){
    return $fieldList;
  }
}
