class BdParser
{
  private $file;
  function __construct($file){
    $this->$file = $file;;
  }

  function load(){
    if ($fd = @fopen($this->file, 'a+')){
      if ($bd = @unserialize($this->file))
	$this->tables = $bd;
      else
	$this->table = array();
      fclose($fd);
      return TRUE;
    }
    else{
      echo "bdphp : Can't open bd file\n";
      return FALSE;
    }
  }
}
?>